<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/element_icon_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="0dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/element_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/element_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/element_icon_cardview"
            android:layout_toEndOf="@+id/element_icon_cardview"
            android:text="Elementuko izenburua"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/element_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/element_title"
            android:layout_marginTop="4dp"
            android:textColor="#A6A6A6"
            android:layout_toEndOf="@+id/element_icon_cardview"
            android:paddingBottom="5dp"
            android:text="Hau elementuko deskribapena izan litzake." />

    </RelativeLayout>

</androidx.cardview.widget.CardView>