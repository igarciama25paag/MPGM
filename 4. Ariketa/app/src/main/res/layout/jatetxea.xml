<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/jatetxea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20sp">

        <TextView
            android:id="@+id/aram_jatetxea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Aram Jatetxea"
            android:textColor="@color/design_default_color_primary_variant"
            android:textSize="32sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/lehenengo_platerak_cardview"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aram_jatetxea"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lehengo_platerak" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="10sp"
                    android:text="Lehenengo platerak"
                    android:textSize="18sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bigarren_platerak_cardview"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lehenengo_platerak_cardview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bigarren_platerak" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="10sp"
                    android:text="Bigarren platerak"
                    android:textSize="18sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</ScrollView>